/*历史*/
.records_nav {
    width: 100%;
    height: 5%;
    margin: 4% 0 2% 0;
}

.records_nav text:nth-child(1) {
    float: left;
    margin: 2% 5% 2% 5%;
    font-size: large;
    font-weight: 600;
    color: #7bbfea;
}
.records_nav image{
    float: right;
    margin: 2% 5% 2% 5%;
    width: 40rpx;
    height: 40rpx;
}
.records_nav text:nth-child(2) {
    float: right;
    margin: 2% 5% 2% 5%;
    font-size: large;
    color: #808080;
    font-weight: 400;
}

.records {
    display: block;
    width: 90%;
    height: 23%;
    margin: 0 auto;
    padding: 2% 1% 2% 2%;
    white-space: nowrap;
    overflow: hidden;
    background-color: white;
}
.records_item {
    position: relative;
    display: inline-block;
    width: 30%;
    height: 100%;
    background-color: white;
    margin-right: 3%;
    overflow: hidden;
    white-space: normal;
}

.records_item .records_item_img {
    position: relative;
    width: 98%;
    height: 60%;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
}

.records_item_img image:nth-child(1) {
    display: block;
    text-align: center;
    width: 100%;
    height: 100%;
}

.records_item_img image:nth-child(2) {
    position: absolute;
    left: 5%;
    bottom: 5%;
    display: inline-block;
    text-align: center;
    width: 18%;
    height: 20%;
    vertical-align: middle;
}

.records_item_img text {
    position: absolute;
    left: 30%;
    bottom: 5%;
    font-weight: 500;
    color: white;
}

.records_item_text {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;
}

.records_item_text text {
    font-size: 14px;
    margin-top: 10px;
}

