}

.nav_item1 {
    position: absolute;
    width: 90%;
    height: 40%;
    top: 10%;
    left: 5%;
}

.nav_item1 .cat_style {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 33%;
    height: 100%;
    float: left;

}

.nav_item1 .image_box {
    width: 40px;
    height: 40px;
    background-color: white;
    border-radius: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nav_item1 .cat_style image {
    width: 35px;
    height: 35px;
}

.nav_item1 .cat_style text {
    font-size: 15px;
    padding-top: 5px;
}

.nav_item2 {
    position: absolute;
    width: 90%;
    height: 40%;
    top: 52%;
    left: 5%;
    padding-top: 5px;
}

.nav_item2 .cat_style {
    display: flex;
    flex-direction: column;
