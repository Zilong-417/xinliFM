/* pages/fmindex/fmindex.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
    overflow: scroll;
}

.top_search {
    position: relative;
    width: 90%;
    height: 6%;
    margin: 3% auto;
    border-radius: 15px;
    background-color: white;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}

.top_search_box {
    position: absolute;
    width: 100%;
    height: 50px;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;

}

.top_search text {
    margin-left: 4%;
    float: left;
    font-size: large;
    line-height: 50px;
    color: #808080;
}

.top_search image {
    float: right;
    width: 30px;
    height: 30px;
    margin-right: 2%;
    margin-top: 2%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}

/*导航*/
.nav {
    position: relative;
    width: 94%;
    height: 22%;
    margin: 0 auto;
    border-radius: 10px;
    background-color: #F0F8FF;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    z-index: -10;
}

.nav .nav_box {
